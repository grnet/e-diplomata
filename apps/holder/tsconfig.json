{
  "extends": "@digigov/cli-build/tsconfig.base",
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ],
  "compilerOptions": {
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@diplomas/ledger": [
        "../../libs/blockchain"
      ],
      "@diplomas/design-system/*": [
        "../../libs/design-system/src/*"
      ],
      "holder": [
        "src"
      ]
    }
  },
}