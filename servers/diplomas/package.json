{
  "name": "@diplomas/server",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "dev": "digigov server dev",
    "wach": "nodemon --watch \"src/**\" --ext \"ts,json\" --ignore \"src/**/*.spec.ts\" --exec \"kill-port 5000 && ts-node -r tsconfig-paths/register src/index.ts\"",
    "load_data": "ts-node  -r tsconfig-paths/register src/utils/load_data.ts",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "@diplomas/ledger": "0.1.0",
    "@diplomas/crypto": "0.1.0",
    "@diplomas/protocol": "0.1.0",
    "@diplomas/messaging": "0.1.0",
    "@diplomas/storage": "0.1.0",
    "morgan": "1.10.0",
    "multer": "~1.4.2",
    "dotenv": "9.0.2",
    "express": "4.17.1",
    "axios": "0.21.1",
    "glob": "7.1.7",
    "jsonwebtoken": "~8.5.1",
    "bcryptjs": "~2.4.3",
    "mongoose": "5.12.10",
    "express-validator": "6.11.1",
    "@types/jsonwebtoken": "~8.5.1",
    "mongodb-prebuilt": "~6.5.0",
    "@types/bcryptjs": "~2.4.2",
    "ethers": "~5.2.0",
    "node-fetch": "~2.6.1"
  },
  "devDependencies": {
    "husky": "^6.0.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3",
    "@types/node": "~14.14.37",
    "@types/jest": "~26.0.22",
    "jest": "~26.6.3",
    "@types/express": "~4.17.11",
    "ts-jest": "~26.5.5",
    "@types/multer": "~1.4.5",
    "nodemon": "~2.0.7",
    "ts-node": "~9.1.1",
    "@types/glob": "~7.1.3",
    "@types/morgan": "~1.9.2",
    "tsconfig-paths": "~3.9.0",
    "kill-port": "1.6.1",
    "ts-node-dev": "~1.1.6",
    "@digigov/cli": "~0.5.7",
    "@digigov/cli-server": "0.0.2"
  }
}